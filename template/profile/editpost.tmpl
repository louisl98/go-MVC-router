{{define "title"}}Edit Post{{end}}
{{define "head"}}{{end}}
{{define "content"}}

<div class="container">
	<div class="page-header">
		<h1>{{template "title" .}}</h1>
	</div>
	<form enctype="multipart/form-data" id="form" method="post">
		<div class="form-group text">
			<label for="post">Post</label>
			<div><textarea rows="5" class="form-control" id="post" name="post" placeholder="Type your post here..." />{{.post}}</textarea></div>
		</div>
		<div class="form-group files">
			<label for="file">Files</label>
			{{range $n := .files}}
			<p><a href="/uploads/{{.FileName}}">{{.FileName}}</a><a href="/profile/deletefile/{{.ID}}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></p>
			{{end}}
			<div class="addfiles">
				<input class="upload" name="upload" type="file"><span style="margin-top:10px;margin-left:-10px;color:#5cb85c;" class="glyphicon glyphicon-plus addfile"></span>
		</div>
		<a title="Save" class="btn btn-success save" role="submit" onclick="document.getElementById('form').submit();">
			<span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Save
		</a>
		<a title="Back to Profile" class="btn btn-danger back" role="button" href="{{$.BaseURI}}profile">
			<span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span> Back
		</a>
		<input type="hidden" name="token" value="{{.token}}">
	</form>
	{{template "footer" .}}
</div>

{{end}}
{{define "foot"}}{{end}}